@page
@using WebApp.Pages.Partials
@model WebApp.Pages.Modules.Shop.IndexModel
@{
}
@Html.AntiForgeryToken()
<nav class="nav">
    <a class="nav-link active" aria-current="page" asp-page="/Home/Guilds">Guilds</a>
	<a class="nav-link active" aria-current="page" asp-page="/Home/Modules" asp-route-id="@Model.Guild.Id" asp-route-name="@Model.Guild.Name">Modules</a>
</nav>
<br />
<div>
	<h2 class="text-primary">Global Rewards</h2>
</div>
<br /><br />
<div class="container p-3">
	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Currency Type
				</th>
				<th>
					Cost
				</th>
				<th>
					Emoji
				</th>
				<th>
					Chosen Effect
				</th>
			</tr>
		</thead>
		<tbody id="TableRows">
			@{
				int index = 0;
				foreach (var item in Model.ShopItems)
				{
					<tr>
						<input asp-for="@Model.SavedItems[index].Id" value="@item.Id">
						<input asp-for="@Model.SavedItems[index].GuildId" value="@item.GuildId">
						<th>
							<input asp-for="@Model.SavedItems[index].ItemName" value="@item.ItemName">
						</th>
						<th>
							@if (Model.SavedItems[index].CurrencyId != null)
							{
								<input asp-for="@Model.SavedItems[index].CurrencyId" value="@item.CurrencyId">
							}
							else
							{
								<input asp-for="@Model.SavedItems[index].CurrencyId" value="">
							}
						</th>
						<th>
							<input asp-for="@Model.SavedItems[index].Cost" value="@item.Cost">
						</th>
						<th>
							@if (Model.SavedItems[index].emojiId != null)
							{
								<input asp-for="@Model.SavedItems[index].emojiId" value="@item.emojiId">
							}
							else
							{
								<input asp-for="@Model.SavedItems[index].emojiId" value="">
							}
						</th>
						<th>
							@if (Model.SavedItems[index].emojiId != null)
							{
								<input asp-for="@Model.SavedItems[index].ItemEffectID" value="@item.ItemEffectID">
							}
							else
							{
								<input asp-for="@Model.SavedItems[index].ItemEffectID" value="">
							}
							<input asp-for="@Model.SavedItems[index].ItemEffectVal" value="">
						</th>
					</tr>
					index++;
				}
			}
		</tbody>
	</table>
</div>

@section Scripts
	{
	@if (ViewData["Message"] != null)
	{
		<script>
			window.onload = function () {
				alert("@ViewData["Message"]");
			};
		</script>
	}
}